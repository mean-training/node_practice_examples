{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["postgres-express-node/*"],
      },
  },
  "lib": [
      "es2015"
  ],
  "include": [
    "./**/*",
    "./server/controllers/**/*",
    "./server/routes/**/*",
    // "./server/models/**/*",
    "./app.ts",
    "./bin/www",
    "./server/middlewares/validate.js"
  ],
  "exclude": [
      "node_modules"
  ]
}